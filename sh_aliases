#!/usr/bin/env bash

# These are not really aliases. Leave them here just for convenience.
export EDITOR='vim'
export PAGER='less'
export LESS='-RiF'
# -R --RAW-CONTROL-CHARS   : display raw control sequence for colors
# -i --ignore-case         : ignore case when searching unless contains uppercase letters
# -F --quit-if-one-screen
# -X --no-init             : disable sending termcap initialization and deinitialization strings
# -S --chop-long-lines     : chop instead of wrap long lines

alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# LSCOLORS for BSD; LS_COLORS for linux
# And here is a good website to modify it https://geoff.greer.fm/lscolors/
export LSCOLORS='exfxcxdxbxegedabagacad'
export LS_COLORS='di=34:ln=35:so=32:pi=33:ex=31:bd=34;46:cd=34;43:su=30;41:sg=30;46:tw=30;42:ow=30;43'


alias ..='cd ..'
alias ...='cd ../..'
alias ~='cd ~'

alias ll='ls -alhF'
# -a: all
# -l: long format
# -h: human readble size
# -F: show extra symbol for each type of file

alias vimzshrc='vim ~/.zshrc && source ~/.zshrc'
alias vimbashrc='vim ~/.bashrc && source ~/.bashrc'

function vimrc() {
    if grep bash <<<$SHELL > /dev/null; then
        vimbashrc
    elif grep zsh <<<$SHELL > /dev/null; then
        vimzshrc
    else
        echo 'Unable to locate shell rc file'
    fi
}

########################## vim ##########################
alias vimr='vim -R'

########################## npm ##########################
alias npmi='npm start'
alias npms='npm start'
alias npmd='npm run develop'
alias npmb='npm build'

########################## git ##########################
# Adapted from https://github.com/ohmyzsh/ohmyzsh/tree/master/plugins/git
alias gs='git status'

alias ga='git add'
alias gaa='git add -A'

alias gc='git commit -v'

alias gco='git checkout'

alias gp='git push'
alias gpf='git push --force-with-lease'
alias gpff='git push --force'

alias gf='git fetch --prune'
alias gu='git pull --prune'

alias grb='git rebase'
alias grbi='git rebase --interactive'
alias grbc='git rebase --continue'
alias grba='git rebase --abort'

alias gl='git l'
alias gla='git la'

alias gd='git diff'
alias gdc='git diff --cached'
alias gdw='git diff --word-diff'
alias gdcw='git diff --cached --word-diff'

alias gsw='git switch'
alias gbr='git branch'
alias gwt='git worktree'
alias gst='git stash'

alias gcleanff='git clean -fd'
alias grst='git reset'
alias gtrash='git stash push --include-untracked -m "trash"'


########################## pass ##########################
if which pass > /dev/null; then
    alias p='pass'
    alias psync='pass git fetch && pass git rebase && pass git push'
fi
